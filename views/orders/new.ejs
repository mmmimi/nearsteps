<% layout('./layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <form action="/orders" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title: </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="order[title]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description: </label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="order[description]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">price: </label>
        <input
          class="form-control"
          type="number"
          id="price"
          step="0.01"
          name="order[price]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="rating">rating: </label>
        <input
          class="form-control"
          type="number"
          min="0"
          max="10"
          id="rating"
          name="order[rating]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="customer">customer: </label>
        <input
          class="form-control"
          type="text"
          id="customer"
          name="order[customer]"
        />
      </div>

      <button class="btn btn-success">Deal erzeugen</button>
      <div class="mt-3">
        <a href="/orders">Zur√ºck</a>
      </div>
    </form>
  </div>
</div>
